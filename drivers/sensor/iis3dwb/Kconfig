# ST Microelectronics IIS3DWB 3-axis accelerometer driver

# Copyright (c) 2020 STMicroelectronics
# SPDX-License-Identifier: Apache-2.0

menuconfig IIS3DWB
	bool "IIS3DWB SPI accelerometer sensor driver"
	depends on SPI
	select HAS_STMEMSC
	select USE_STDC_IIS3DWB
	help
	  Enable driver for IIS3DWB accelerometer sensor driver

if IIS3DWB

choice IIS3DWB_TRIGGER_MODE
	prompt "Trigger mode"
	help
	  Specify the type of triggering to be used by the driver.

config IIS3DWB_TRIGGER_NONE
	bool "No trigger"

config IIS3DWB_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select IIS3DWB_TRIGGER

config IIS3DWB_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select IIS3DWB_TRIGGER

endchoice

config IIS3DWB_TRIGGER
	bool

if IIS3DWB_TRIGGER

config IIS3DWB_THREAD_PRIORITY
	int "Thread priority"
	depends on IIS3DWB_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config IIS3DWB_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on IIS3DWB_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # IIS3DWB_TRIGGER

endif # IIS3DWB
